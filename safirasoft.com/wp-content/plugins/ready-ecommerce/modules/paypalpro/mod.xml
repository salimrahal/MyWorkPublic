<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : paypalpro/mod.xml
    Description:
        Description of all configuration options for PayPal Module
-->

<config>
    <params>
        <param name="username" type="text" label="Username" />
        <param name="password" type="text" label="Password" />
        <param name="signature" type="text" label="Signature" />
        <param name="transMethod" type="radiobuttons" values="Sale,Authorization" default="Sale" label="Transaction Type" />
        <param name="testMode" type="checkbox" label="Test Mode" />
    </params>
</config>